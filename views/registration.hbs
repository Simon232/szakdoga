<div class="main-text">
    <div class="reg-title">
        <h1>Regisztr&aacuteci&oacute</h1>
    </div>
    <form class="form-horizontal" method="post">
        <fieldset>
            <div class="form-group {{#if validationErrors.username}}
                    has-error
                {{/if}}">

                <div class="field-container">


                    <label class="username">Felhaszn&aacutel&oacuten&eacutev: </label>
                    <input class="form-control input-fields" id="username" name="username"
                           placeholder="username, pl.: user" type="text"> <!--value="ertek"-->
                    {{!--{{#if validationErrors.username}}--}}
                        <span class="help-block">{{validationErrors.username}}</span>
                    {{!--{{/if}}--}}
                </div>
            </div>
            <div class="field-container">
                <label class="email">E-mail: </label>
                <input required class="form-control input-fields" id="email" name="email"
                       placeholder="e-mail, pl.: user@gmail.com" type="text"
                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"> <!--value="ertek"-->
            </div>
            <div class="field-container">
                <label class="pwd">Jelsz&oacute: </label>
                <input required class="form-control input-fields" id="password" name="password"
                       placeholder="password, pl.: 1234" type="password"> <!--value="ertek"-->
            </div>
            <div class="field-container">
                <label class="pwda">Jelsz&oacute ism&eacutet: </label>
                <input required class="form-control input-fields" id="passwordagain" name="passwordagain"
                       placeholder="password, pl.: 1234" type="password"> <!--value="ertek"-->
            </div>
            <div class="button-container">
                <button type="reset" class="btn btn-default">Mez&otildek t&oumlrl&eacutese</button>
                <button type="submit" class="btn btn-primary">Regisztr&aacutelok</button>
            </div>
        </fieldset>
    </form>
</div>
