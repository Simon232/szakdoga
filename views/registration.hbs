<div class="main-text">

    {{#each validationErrors}}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{this}}
        </div>

    {{/each}}
    <div class="reg-title">
        <h1>Regisztráció</h1>
    </div>
    <form class="form-horizontal" method="post">
        <fieldset>
            <div class="form-group ">
                <label class="username">Felhasználónév: </label>
                <input required class="form-control input-fields" id="username" name="username"
                       placeholder="username, pl.: user" type="text" value="{{data.username}}">
                <!--{{#if validationErrors}}-->
                    <!--<span class="help-block">{{validationErrors}}</span>-->
                <!--{{/if}}-->
            </div>

            <div class="form-group ">
                <label class="email">E-mail: </label>
                <input required class="form-control input-fields" id="email" name="email"
                       placeholder="e-mail, pl.: user@gmail.com" type="email"
                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" value="{{data.email}}">
                <!--{{#if validationErrors}}-->
                    <!--<span class="help-block">{{validationErrors}}</span>-->
                <!--{{/if}}-->
            </div>
            <div class="form-group ">
                <label class="pwd">Jelszó: </label>
                <input required class="form-control input-fields" id="password" name="password"
                       placeholder="password, pl.: 1234" type="password" value="{{data.password}}">
                <!--{{#if validationErrors}}-->
                    <!--<span class="help-block">{{validationErrors}}</span>-->
                <!--{{/if}}-->
            </div>
            <!--<div class="form-group">-->
                <!--<label class="pwda">Jelszó ismét: </label>-->
                <!--<input required class="form-control input-fields" id="passwordagain" name="passwordagain"-->
                       <!--placeholder="password, pl.: 1234" type="password" value="{{data.passwordagain}}">-->
                <!--&lt;!&ndash;value="ertek"&ndash;&gt;-->
                <!--&lt;!&ndash;&lt;!&ndash;{{#if validationErrors}}&ndash;&gt;&ndash;&gt;-->
                    <!--&lt;!&ndash;&lt;!&ndash;<span class="help-block">{{validationErrors}}</span>&ndash;&gt;&ndash;&gt;-->
                <!--&lt;!&ndash;&lt;!&ndash;{{/if}}&ndash;&gt;&ndash;&gt;-->
            <!--</div>-->
            <div class="button-container">
                <button type="reset" class="btn btn-default">Mezők törlése</button>
                <button type="submit" class="btn btn-primary">Regisztrálok</button>
            </div>
        </fieldset>
    </form>
</div>
