<!--menu ends-->
<div class="main-text">
    {{#each validationErrors}}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{this}}
        </div>

    {{/each}}
    <div class="reg-title">
        <h1>Bejelentkezés</h1>
    </div>
    <form class="form-horizontal" method="post">
        <fieldset>
            <div class="field-container">
                <label class="username">Felhasználónév: </label>
                <input required class="form-control input-fields" id="username" name="username"
                       placeholder="username, pl.: user" type="text"> <!--value="ertek"-->
            </div>
            <div class="field-container">
                <label class="pwd">Jelszó: </label>
                <input required class="form-control input-fields" id="password" name="password"
                       placeholder="password, pl.: 1234" type="password"> <!--value="ertek"-->
            </div>
            <div class="button-container">
                <button type="reset" class="btn btn-default">Mezők törlése</button>
                <button type="submit" class="btn btn-primary">Belépek</button>
            </div>
        </fieldset>
    </form>
</div>
<script src='js/main.js'></script>